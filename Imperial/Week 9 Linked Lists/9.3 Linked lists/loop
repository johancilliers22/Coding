#include <iostream>
 
struct IntListNode{
    int val;
    IntListNode* next;
};
 
int main(){
    IntListNode* l;
    l = NULL; 
    int n,i,valu;
    std::cout<<"Enter size of list: "<<std::endl;
    std::cin>>n;
    for(i=0;n>i;i++){
        std::cout<<"Enter list entry: "<<std::endl;
        std::cin>>valu;  
        IntListNode* tmp;
        tmp = new IntListNode;
        tmp->val = valu;
        tmp->next = l;
        l = tmp;

    }
    IntListNode* tmp;
    IntListNode* lit;
    lit = l;
 
    while(lit != NULL){
        std::cout << lit->val << std::endl;
        lit = lit->next;
    }
 
    lit = l;
 
    while(lit != NULL){
        tmp = lit->next;
        delete lit;
        lit = tmp;
    }
}
