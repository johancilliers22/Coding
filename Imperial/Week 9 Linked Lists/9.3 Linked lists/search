#include <iostream>
 
struct IntListNode{
    int val;
    IntListNode* next;
};
 
int main(){
    IntListNode* l;
    l = NULL; 
    int n,i,valu;
    std::cout<<"Enter size of list: "<<std::endl;
    std::cin>>n;
    for(i=0;n>i;i++){
        std::cout<<"Enter list entry: "<<std::endl;
        std::cin>>valu;  
        IntListNode* tmp;
        tmp = new IntListNode;
        tmp->val = valu;
        tmp->next = l;
        l = tmp;

    }
    IntListNode* tmp;
    IntListNode* lit;
    lit = l;
 
    while(lit != NULL){
        std::cout << lit->val << std::endl;
        lit = lit->next;
    }
    int num;
    std::cout<<"Please enter a value you want to check is in the list: "<<std::endl;
    std::cin>>num;
    IntListNode* numb;
    numb->val = num;
    IntListNode* check;
    check = l;
    bool BOOL;
    BOOL = false;
    while(check != NULL){
        if(check == numb){
          BOOL = true;
        }
        check = check->next;
    }
    if(BOOL == true){
      std::cout<<num<<" is in the list"<<std::endl;
    }
    if(BOOL == false){
      std::cout<<num<<" isn't in the list"<<std::endl;
    }
 
    lit = l;
 
    while(lit != NULL){
        tmp = lit->next;
        delete lit;
        lit = tmp;
    }
}
