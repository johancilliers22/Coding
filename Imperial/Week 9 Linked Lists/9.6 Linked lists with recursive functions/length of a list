#include <iostream>
#include <fstream>
#include <cstdlib>
#include <vector>
 
typedef int list_t;
 
struct ListNode{
    list_t val;
    ListNode* next;
};
 
ListNode* cons_list(list_t e, ListNode* l){
    ListNode* tmp;
 
    tmp = new ListNode;
 
    tmp->val = e;
    tmp->next = l;
 
    return tmp;
}
 
int length_list_rec(ListNode* l){
    int len = 0;
    if(l != NULL){
        len = 1 + length_list_rec(l->next);
    }
    //std::cout<<len<<std::endl;
    return len;
}
 
void print_list_rec(ListNode* l){
    if(l != NULL){
        std::cout << l->val << std::endl;
        // we print the first element
        print_list_rec(l->next);
        // then the rest of the list
    }
}
 
void deallocate_list_rec(ListNode* l){
    ListNode* tmp;
 
    if(l != NULL){
        tmp = l->next;
        delete l;
        deallocate_list_rec(tmp);
    }
}
 
int main(){
    ListNode* l = NULL;
 
    l = cons_list(2, l);
    l = cons_list(3, l);
    l = cons_list(3, l);
 
    print_list_rec(l);

    std::cout<<length_list_rec(l)<<std::endl;
    
    deallocate_list_rec(l);
}