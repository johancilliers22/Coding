#include <iostream>
 
void f(){
    int* pi;
    pi = new int;
}
 
int main(){
    for(int i = 0; i < 1000; i++){
        f();
        // at each iteration new memory is allocated in f()
        // but it is not deallocated when the function terminates
        // and we can't access or deallocate it anymore
    }
}